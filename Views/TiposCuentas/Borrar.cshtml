@model TipoCuenta
@{
    ViewData["Title"] = "Borrar";
}

<h3 class="mb-3">¿Estas seguro de que deseas borrar el tipo de cuenta @Model.Nombre? </h3>
<form asp-action="BorrarTipoCuenta">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Borrar</button>
    <a href="@Url.Action("Index", "TiposCuentas")" class="btn btn-secondary">Cancelar</a>
    
</form>
